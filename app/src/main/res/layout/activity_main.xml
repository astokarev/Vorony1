<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/countP2"
        android:layout_width="178dp"
        android:layout_height="149dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="32dp"
        android:background="@color/purple_500"
        android:rotation="180"
        android:text="Игрок 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starP2" />

    <ImageView
        android:id="@+id/starP2"
        android:layout_width="78dp"
        android:layout_height="85dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="36dp"
        android:rotation="180"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/starP1"
        android:layout_width="78dp"
        android:layout_height="85dp"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="36dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/countP1"
        android:layout_width="178dp"
        android:layout_height="149dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="32dp"
        android:background="@color/teal_200"
        android:text="Игрок 1"
        app:layout_constraintBottom_toTopOf="@+id/starP1"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/restartBtn"
        android:layout_width="343dp"
        android:layout_height="88dp"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/countP1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countP2" />

</androidx.constraintlayout.widget.ConstraintLayout>